<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="热点粤谈" />

        <TextView
            android:id="@+id/tv_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:text="更多 >" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/con_layout1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <ImageView
                    android:id="@+id/iv_picture1"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@mipmap/ic_launcher" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="4dp"
                    android:background="@mipmap/ic_launcher"
                    android:scaleType="fitXY" />
            </RelativeLayout>


            <TextView
                android:id="@+id/tv_descriptions1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="帝国崛起第三十集"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_name1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="帝国崛起"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/con_layout2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <ImageView
                    android:id="@+id/iv_picture2"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@mipmap/ic_launcher" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="4dp"
                    android:background="@mipmap/ic_launcher"
                    android:scaleType="fitXY" />
            </RelativeLayout>


            <TextView
                android:id="@+id/tv_descriptions2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="帝国崛起第三十集"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_name2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="帝国崛起"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/con_layout3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <ImageView
                    android:id="@+id/iv_picture3"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@mipmap/ic_launcher" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="4dp"
                    android:background="@mipmap/ic_launcher"
                    android:scaleType="fitXY" />
            </RelativeLayout>


            <TextView
                android:id="@+id/tv_descriptions3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="帝国崛起第三十集"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_name3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="帝国崛起"
                android:textSize="10sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
