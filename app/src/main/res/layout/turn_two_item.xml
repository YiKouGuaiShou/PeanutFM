<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/con_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/layout_play"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--<com.makeramen.roundedimageview.RoundedImageView-->
            <!--android:id="@+id/iv_picture1"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="180dp"-->
            <!--android:scaleType="centerCrop"-->
            <!--app:riv_corner_radius="6dp" />-->

            <TextView
                android:id="@+id/tv_please_wait"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:background="@color/grey"
                android:gravity="center"
                android:text="敬请期待"
                android:visibility="visible" />

            <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
                android:id="@+id/JC_video1"
                android:layout_width="match_parent"
                android:layout_height="180dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/tv_descriptions1"
                android:layout_width="280dp"
                android:layout_height="35dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:text="帝国崛起第三十集帝国崛起第三十集帝国崛起第三十集帝国崛起第三十集"
                android:textColor="#000000"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/layout_turntwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="4dp"
                    android:background="@mipmap/turntwo_play" />

                <TextView
                    android:id="@+id/tv_persons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="125人"
                    android:textSize="12sp" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_name1"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="帝国崛起帝国崛起帝国崛起帝国崛起帝国崛起"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>
