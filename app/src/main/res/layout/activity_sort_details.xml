<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="15dp"
    tools:context="com.yikouguaishou.peanutfm.SortDetailsActivity">

    <RelativeLayout
        android:id="@+id/mRelativeLayout_sortDetails"
        android:layout_width="match_parent"
        android:layout_height="32dp">

        <Button
            android:id="@+id/mButton_sortDetails_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:background="@mipmap/back" />

        <TextView
            android:id="@+id/mTextView_sortDetails_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="mTextView_sortDetails_title"
            android:textColor="#000000"
            android:textSize="16sp" />
    </RelativeLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/mSwipeRefreshLayout_sortDetails"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@id/mRelativeLayout_sortDetails">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/mRecyclerView_sortDetails"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>
    </android.support.v4.widget.SwipeRefreshLayout>
</RelativeLayout>
